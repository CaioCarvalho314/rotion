{
  "name": "rotion",
  "version": "1.0.2",
  "description": "Uma alternativa de Notion criada em Electron",
  "main": "./out/main/index.js",
  "author": "Caio",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": " electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "release": "electron-builder --publish always"
  },
  
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@tanstack/react-query": "^5.17.15",
    "@tiptap/extension-document": "^2.1.16",
    "@tiptap/extension-highlight": "^2.1.16",
    "@tiptap/extension-placeholder": "^2.1.16",
    "@tiptap/extension-typography": "^2.1.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tiptap/react": "^2.1.16",
    "@tiptap/starter-kit": "^2.1.16",
    "clsx": "^2.1.0",
    "cmdk": "^0.2.0",
    "electron-router-dom": "^1.0.5",
    "electron-store": "^8.1.0",
    "phosphor-react": "^1.4.1",
    "react-router-dom": "^6.21.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rocketseat/eslint-config": "^2.1.0",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^18.19.5",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.1",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "postcss": "^8.4.33",
    "tailwind-scrollbar": "^3.0.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
